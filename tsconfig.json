{
  "files": [],
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/utils" },
    { "path": "./packages/types" },
    { "path": "./packages/ui" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@boltvisa/utils": ["packages/utils/src"],
      "@boltvisa/types": ["packages/types/src"],
      "@boltvisa/ui": ["packages/ui/src"],
      "@/*": ["apps/web/src/*"]
    }
  }
}
